#!/bin/sh

javaexec="java -cp ./lib/inca-common.jar:./lib/incaXmlBeans.jar:./lib/log4j-1.2.15.jar:./lib/saxon9-dom.jar:./lib/saxon9.jar:./lib/xbean-2.4.jar:./lib/xbean_xpath-2.4.jar  edu.sdsc.inca.util.SuiteStagesWrapper"

if [ "$1" = "auto" ]; then
  if [ ! -d "../teragrid/var/suites" ]; then
    echo "Cannot find teragrid var/suites directory at ../teragrid/var/suites" >&2
    exit 1;
  fi
  echo "Expanding inca-auto-new.xml to newsuites";
  if [ -d "newsuites" ]; then
    rm -fr "newsuites";
  fi
  $javaexec expand -i incat-auto-new.xml -s newsuites
  echo "Diffing suites";
  $javaexec diff -s1 newsuites -s2 ../teragrid/var/suites -it true -iu true -a true > diff.log
  echo "Check diff.log for results (search for ERROR for errors)";
else
  $javaexec $*
fi

