				<element name = "wallClockTime" type = "integer"/>
				<element name = "memory" type = "integer"/>
				<element name = "cpuTime" type = "integer"/>
			</sequence>
		</complexType>
	</element>
	
	<!-- A schedule describes to the RM how often to run a reporter -->
	
	<element name = "schedule">
