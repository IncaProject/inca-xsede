	<element name = "args">
		<complexType>
			<sequence>
				<element ref = "inca:arg" maxOccurs = "unbounded"/>
			</sequence>
		</complexType>
	</element>
	<element name = "arg">
		<complexType>
			<sequence>
				<element ref = "inca:name"/>
				<element ref = "inca:value"/>
			</sequence>
		</complexType>
	</element>
	<element name = "name" type = "string"/>
	<element name = "value" type = "string"/>
	
	<!-- timout is used to express the ways that the reporter manager monitors the reporters -->
	
	<element name = "timeout">
