				<element ref = "inca:setup" minOccurs = "0"/>
				<element ref = "inca:cleanup" minOccurs = "0"/>
				<element ref = "inca:hostname" minOccurs = "0"/>
			</sequence>
		</complexType>
	</element>
	<element name = "uri" type = "anyURI"/>
	<element name = "setup" type = "string"/>
	<element name = "cleanup" type = "string"/>
	<element name = "hostname" type = "string"/>
	
